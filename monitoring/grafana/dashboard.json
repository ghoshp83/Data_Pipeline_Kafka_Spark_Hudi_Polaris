{
  "dashboard": {
    "title": "Data Pipeline Monitoring",
    "tags": ["kafka", "spark", "hudi"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Kafka Messages Per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(kafka_server_brokertopicmetrics_messagesin_total[5m])",
            "legendFormat": "{{topic}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Spark Processing Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "spark_streaming_batch_processing_time_ms",
            "legendFormat": "Processing Time"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Records Processed by Topic",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (topic) (rate(records_processed_total[5m]))",
            "legendFormat": "{{topic}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(processing_errors_total[5m])",
            "legendFormat": "Errors/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Kafka Consumer Lag",
        "type": "graph",
        "targets": [
          {
            "expr": "kafka_consumer_lag",
            "legendFormat": "{{topic}}-{{partition}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "S3 Write Throughput",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(s3_bytes_written_total[5m])",
            "legendFormat": "Bytes/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
