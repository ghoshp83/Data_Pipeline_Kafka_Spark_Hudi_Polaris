# Data Pipeline Configuration
# Copy this file to .env and modify as needed

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPICS=user_events,transactions,sensor_data,log_events,bulk_upload

# Spark Configuration
SPARK_MASTER=local[*]
SPARK_STREAMING_BATCH_DURATION=10s
SPARK_CHECKPOINT_LOCATION=./checkpoints

# Storage Configuration
S3_ENDPOINT=http://localhost:4566
S3_BUCKET=data-pipeline-bucket
HUDI_TABLE_BASE_PATH=s3://data-pipeline-bucket/hudi-tables/

# AWS Credentials (for LocalStack)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin